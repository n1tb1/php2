                            <img src="{{ site }}img/cart.svg" alt="cart">
                        </a>
                        <div class="cart-dropdown">
                            <ul>
                                {% for product in cart.contents %}
                                    <li class="cart-item">
                                        <a href="#"><img class="cart-item-img" src="{{ site }}/img/{{ product.img }}"></a>
                                        <div class="cart-item-info">
                                            <a class="cart-item-name" href="#"> {{ product.product_name }}</a>
                                            <span class="cart-item-rate">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-half-o"></i>
                                        </span>
                                            <span class="cart-item-price">{{ product.quantity }} x {{ product.price }}$</span>
                                        </div>
                                        <i class="fa fa-times-circle cart-item-delete" data-id="{{ product.product_id }}"></i>
                                    </li>
                                {% endfor %}
                            </ul>
                            <div class="cart-total">
                                <span>TOTAL</span>
                                <span>${{ cart.amount }}</span>
                            </div>
                            <a href="{{ site }}checkout">
